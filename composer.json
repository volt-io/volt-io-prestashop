{
  "name": "coalacode/volt",
  "description": "Volt",
  "type": "project",
  "license": "MIT",
  "authors": [
    {
      "name": "Coalacode.com",
      "email": "info@coalacode.com"
    }
  ],
  "minimum-stability": "stable",
  "autoload": {
    "psr-4": {
      "Volt\\": "src/",
      "Volt\\Tests\\": "tests/php/"
    },
    "classmap": [
      "volt.php"
    ]
  },
  "config": {
    "preferred-install": "dist",
    "prepend-autoloader": false,
    "optimize-autoloader": true,
    "platform": {
      "php": "7.3"
    }
  },
  "require": {
    "php": ">=7.2",
    "ext-json": "*",
    "ext-curl": "*"
  },
  "require-dev": {
    "roave/security-advisories": "dev-latest",
    "phpunit/phpunit": "^8",
    "mockery/mockery": "^1.2",
    "squizlabs/php_codesniffer": "^3.7.1",
    "phpstan/phpstan": "^1.9.4",
    "phpmd/phpmd": "@stable",
    "prestashop/php-dev-tools": "^3.16",
    "symfony/phpunit-bridge": "^6.2",
    "friendsofphp/php-cs-fixer": "^2.19"
  },
  "scripts": {
    "build:prod": "composer install -v --no-dev",
    "test": [
      "@putenv XDEBUG_MODE=coverage",
      "@php -d date.timezone=UTC ./vendor/bin/phpunit -c tests/php/phpunit.xml"
    ],
    "test:coverage": [
      "@putenv XDEBUG_MODE=coverage",
      "phpunit --color=always --coverage-html=\"build\""
    ]
  }
}
